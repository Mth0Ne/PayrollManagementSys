@model SalaryAddDto
@{
    ViewData["Title"] = "GetEmployeePayroll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div b-4cazk3bw56 class="card" style="padding:10px;">
    <form asp-controller="Payroll" asp-action="GetEmployeePayroll" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PersonelId" />

        <div class="form-group">

            <label asp-for="User.FirstName">Ad</label>
            <input asp-for="User.FirstName" class="form-control" type="text" readonly />

        </div>
        <div class="form-group">

            <label asp-for="User.LastName">Soyad</label>
            <input asp-for="User.LastName" class="form-control" type="text" readonly />


        </div>
        <div class="form-group">

            <label asp-for="SalaryDate">Tarih (Ay ve Yıl)</label>
            <input asp-for="SalaryDate" value="@DateTime.Now.ToString("Y")" class="form-control" type="month" id="daymonth" />

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary" onclick="btnBordo()">Bordo Al</button>
        </div>
    </form>

</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function (){

            var errormessage = '@TempData["ErrorPayment"]';
            if(errormessage){
                Swal.fire({
                    title: 'HATA!',
                    text: errormessage,
                    icon: 'error',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'TAMAM'
                });
            }
        });

    </script>
}